<%- include('./partials/head', {current: '/'}); %>

<main>

  <!-- Home Section -->
  <section id="home">

    <!-- Title -->
    <h1>De Hallen</h1>

  </section>


  <!-- About Section -->
  <section id="about">

    <!-- Section Tag -->
    <p class="sectionTag capsLock extraBold" 
       aria-hidden="true">
       Over de Hallen
    </p>
    <!-- Section Number -->
    <p class="sectionNumber extraBold"
       aria-hidden="true">
       01
    </p>
    <h2><span class="extraBold">Wie</span> zijn wij?</h2>
    <p>Wij van de Hallen, zijn een platform gericht naar diverse buurtinitiatieven.</p>

  </section>


  <!-- Activity Section -->
  <section id="activity">

    <!-- Section Tag -->
    <p class="sectionTag capsLock extraBold" 
       aria-hidden="true">
       Vraag en Aanbod
    </p>
    <!-- Section Number -->
    <p class="sectionNumber extraBold"
       aria-hidden="true">
       02
    </p>

    <!-- Section Title -->
    <h2>Bekijk onze <span class="extraBold">initiatieven</span></h2>

    <% hallenData.forEach(function(database) { %>
      <ul class="activityList">
        <li class="activityItem">
          <% if (database.image) { %>
            <img src="https://fdnd-agency.directus.app/assets/<%= database.image %>">
          <% } %>

          <div class="description">
            <a href="/initiatief/<%= database.id %>"><h3><%= database.title %></h3></a>

            <p>
                <span><%= database.start_date %> - <%= database.end_date %></span>
            </p>
            
            <p><%- database.short_description %></p>
          </div>
        </li>
      </ul>
    <% }) %>

  </section>


  <!-- Submit Activity Section -->
  <section id="submitactivity">

    <!-- Section Tag -->
    <p class="sectionTag capsLock extraBold" 
       aria-hidden="true">
       Initiatief Aanvragen
    </p>
    <!-- Section Number -->
    <p class="sectionNumber extraBold"
       aria-hidden="true">
       03
    </p>

    <!-- Section Title -->
    <div class="submitContent flexLayout">
      <div>
        <h2>Ben je op zoek naar een <span class="extraBold">initiatief?</span></h2>
        <p>Op zoek naar een balonnenclown? DJ voor een huisfeest? Het maakt niet uit wat! Vul dan het formulier in, en wie weet vind je de juiste persoon waar jij naar op zoek bent.</p>    
      </div>
      <div>
        <form method="post" action="/">
          <h3>Wat zoek je?</h3>
          <textarea required name="bericht"></textarea> <br>
          
          <h3>Voor wanneer?</h3>
          <textarea required name="bericht"></textarea> <br>
          <button type="submit" id="submit-button">Aanvraag indienen</button>
        </form>
      </div>
    </div>
  </section>


  <!-- Contact Section -->
  <section id="contact">

    <!-- Section Tag -->
    <p class="sectionTag capsLock extraBold" 
       aria-hidden="true">
       Contact
    </p>
    <!-- Section Number -->
    <p class="sectionNumber extraBold"
       aria-hidden="true">
       04
    </p>

    <!-- Section Title -->
    <h2>Heb je <span class="extraBold">vragen?</span></h2>

    <!-- Contact Info -->
    <div class="contact-wrapper">
      <div class="contact-container">
        <h3>Hotel de Hallen</h3>
        <ul>
          <li><a href="www.hoteldehallen.com">www.hoteldehallen.com</a></li>
          <li>info@hoteldehallen.com</li>
          <li>Tel. +31(0)20 8 208 670</li>
        </ul>
        <h3>De Hallen Studio's</h3>
        <ul>
          <li><a href="www.hallenstudios.nl">www.hallenstudios.nl</a></li>
          <li>info@dehallenstudios.nl</li>
          <li>Tel. +31(0)20 8208206</li>
        </ul>
        <h3>De FilmHallen</h3>
        <ul>
          <li><a href="www.filmhallen.nl">www.filmhallen.nl</a></li>
          <li>info@filmhallen.nl</li>
          <li>Tel. +31 85 000 4544</li>
        </ul>
      </div>
  
      <div class="contact-container">
        <h3>De Foodhallen</h3>
        <ul>
          <li><a href="www.foodhallen.nl">www.foodhallen.nl</a></li>
          <li>info@foodhallen.nl</li>
